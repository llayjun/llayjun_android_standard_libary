<?xml version="1.0" encoding="utf-8"?>
<com.example.common.widget.viewgroup.SquareRelativelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.common.widget.viewgroup.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_corner_stroke_dash"
        android:gravity="center"
        android:padding="@dimen/x20">

        <ImageView
            android:id="@+id/iv_album_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

    </com.example.common.widget.viewgroup.SquareFrameLayout>

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="@dimen/x76"
        android:layout_height="@dimen/x76"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_remove_46" />

</com.example.common.widget.viewgroup.SquareRelativelayout>