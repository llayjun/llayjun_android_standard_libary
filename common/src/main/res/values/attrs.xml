<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RTextView可设置图片大小 -->
    <declare-styleable name="RTextView">
        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />
        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />
        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />
        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />
        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />
        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_pressed" format="color" />
        <attr name="text_color_unable" format="color" />
        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_pressed" format="reference" />
        <attr name="icon_src_unable" format="reference" />
        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <!--字体样式-->
        <attr name="text_typeface" format="string" />
    </declare-styleable>

    <!--自定义圆形进度条-->
    <declare-styleable name="CircleProgressBar">
        <attr name="mlpb_inner_radius" format="dimension" />
        <attr name="mlpb_background_color" format="color" />
        <attr name="mlpb_progress_color" format="color" />
        <attr name="mlpb_progress_stoke_width" format="dimension" />
        <attr name="mlpb_show_arrow" format="boolean" />
        <attr name="mlpb_enable_circle_background" format="boolean" />
        <attr name="mlpb_arrow_width" format="dimension" />
        <attr name="mlpb_arrow_height" format="dimension" />

        <attr name="mlpb_progress" format="integer" />
        <attr name="mlpb_max" format="integer" />

        <attr name="mlpb_progress_text_size" format="dimension" />
        <attr name="mlpb_progress_text_color" format="color" />

        <!--<attr name="mlpb_progress_text_offset" format="dimension"/>-->
        <attr name="mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <!--banner指示器-->
    <declare-styleable name="CircleIndicator">
        <attr name="ci_width" format="dimension" />
        <attr name="ci_height" format="dimension" />
        <attr name="ci_margin" format="dimension" />
        <attr name="ci_animator" format="reference" />
        <attr name="ci_animator_reverse" format="reference" />
        <attr name="ci_drawable" format="reference" />
        <attr name="ci_drawable_unselected" format="reference" />

        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

    </declare-styleable>

    <!--FlowLayout-->
    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer" />
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

</resources>